<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:admobsdk="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="#00000000"
        android:src="@drawable/contanct" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <example.player.kanlongmeng.playerdemo.ads.AdView
            android:id="@+id/ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            admobsdk:backgroundColor="#00000000"
            admobsdk:testing="false"
            admobsdk:textColor="#00FFFF" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:layout_gravity="right"
        android:background="#00000000"
        android:src="@drawable/back" />


</LinearLayout>